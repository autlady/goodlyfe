header.header
   //===== navigation =====
   .header-nav.d-flex
      .header-container.d-flex
         a(href="#!").logo Good#[span.accent-span lyfe]
          
         // ===== nav =====

         #header-menu
            nav.header-menu.d-flex 
               a(href="#!") Classes
               a(href="#!") Timetable
               a(href="#!") Clubs
               a(href="#!") Nutrition
               a(href="#!") Free Trial
         
    
         .header-nav__btn.d-flex
            // ===== button-search =====
            button.search-open.d-flex#search-open 
               span Search 
               svg.svg-search 
                  use(href="./img/sprite/solid.svg#magnifying-glass")
            
            // ===== button =====
            button.btn-outline.btn-outline--slim Login

             // ===== menu-toggle =====
            button.menu-toggle#menu-toggle 
               span

   //===== header-search =====
   .header-search-wrapper#header-search-form
      .header-container
         form.search-form
            .form-item
               input(type="text" placeholder="search...")
               button(type="submit").search-btn
                  svg.svg-search 
                     use(href="./img/sprite/solid.svg#magnifying-glass")

               button(type="reset").reset-btn
                  svg.svg-xmark 
                     use(href="./img/sprite/solid.svg#xmark")

   //===== slider =====
   .header-content

      //===== svg-bottom-border =====  
      .header-content__svg 
         svg.svg-border-desk(viewBox="0 0 1440 35" fill="none" xmlns="http://www.w3.org/2000/svg")
            path(d="M0 14.0112C0 14.0112 412.629 -12.7579 720 14.0112C1027.37 40.7803 1440 0.558594 1440 0.558594V34.5586H0" fill="white")
         svg.svg-border-mob(viewBox="0 0 320 25" fill="none" xmlns="http://www.w3.org/2000/svg")
            path(d="M0 9.89162C0 9.89162 91.6953 -9.79156 160 9.89162C228.305 29.5748 320 0 320 0V25H0" fill="white")

      //===== header title =====
      .header-content__title 
         h1.h1 Welcome to #[br] Good#[span.accent-span lyfe] Gyms 
         a.btn(href="#!") See the benefits

      //===== headerSwiper =====
      .swiper.header-slider 
         .swiper-wrapper
            +header-slide("header-slide1")
            +header-slide("header-slide2")
            +header-slide("header-slide3")
            +header-slide("header-slide4")
         .swiper-pagination  

  
				
   
